<%- include('../header') %>
    <link href="https://cdn.rawgit.com/TeaMeow/TocasUI/2.3.2/dist/tocas.css" rel='stylesheet'>
    <script src="https://cdn.rawgit.com/TeaMeow/TocasUI/2.3.2/dist/tocas.js"></script>
    <style type="text/css">
        .pusher {
            background-color: rgb(250, 250, 250);
        }
    </style>

    <!-- 左側邊欄 -->
    <div class="ts left vertical fluid inverted visible menu sidebar">

        <!-- 個人資料項目 -->
        <div class="center aligned item">
            <a href="/store/store">
                <img class="ts tiny circular image" src="/img/store.png">
                <br>
                <br>
                <div>Store</div>
            </a>
        </div>
        <!-- / 個人資料項目 -->

        <!-- 餐券管理 -->
        <div class="item">
            <i class="setting icon"></i>
            餐券管理
            <div class="menu">
                <a class="item" href="/store/transaction">掃描餐券</a>
                <a class="item" href="/store/queryStoreTicket">已收餐券</a>
            </div>
        </div>
        <!-- / 餐券管理 -->


        <!-- 底部選單 -->
        <div class="bottom menu">
            <!-- 登出 -->
            <a href="/signout" class="item">
                <i class="sign out icon"></i>
                登出
            </a>
            <!-- / 登出 -->
        </div>
        <!-- / 底部選單 -->
    </div>
    <!-- / 左側邊欄 -->


    <!-- 可擠壓式的推動容器 -->
    <div class="squeezable pusher">
        <%- include('../components/nav') %>
            <div class="ts fluid divided statistics">
                <div class="statistic">
                    <div class="value">
                        <%=tickets.length %>
                    </div>
                    <div class="label">張餐券</div>
                </div>
            </div>

            <!-- <div id="first" class="ts top attached tabbed menu">
            <a class="active item" data-tab="本月收入" href="">本月收入</a>
            <a class="item" data-tab="本學期收入" href="">本學期收入</a>
        </div> -->

            <!-- 清單欄位 -->
            <div class="sixteen wide column">
                <br>
                <table class="ts very basic striped table">
                    <thead>
                        <tr>
                            <th>餐券編號</th>
                            <th>擁有者</th>
                            <th>額度</th>
                            <th>發放單位</th>
                            <th>消費餐廳</th>
                            <th>發放日期</th>
                            <th>使用日期</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%tickets.forEach(function(ticket) { %>
                            <tr>
                                <td>
                                    <%=ticket.Key%>
                                </td>
                                <td>
                                    <%=ticket.Owner%>
                                </td>
                                <td>
                                    <%=ticket.Value%>
                                </td>
                                <td>
                                    <%=ticket.Licenser%>
                                </td>
                                <td>
                                    <%=ticket.Restaurant%>
                                </td>
                                <td>
                                    <%=ticket.IssuedDate%>
                                </td>
                                <td>
                                    <%=ticket.UsedDate%>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
            <!-- / 清單欄位 -->

    </div>
    <!-- / 可擠壓式的推動容器 -->
    <%- include('../footer') %>