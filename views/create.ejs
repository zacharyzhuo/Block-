  </div>
  <!-- / 左側邊欄 -->

  <!-- 可擠壓式的推動容器 -->
  <div class="squeezable pusher">
    <%- include('../components/nav') %>
      <div class="ui grid">
        <div class="four wide column">
          <a class="avatar avatar-link" href="/posts?author=<%= manager._id %>" data-title="<%= manager.name %>">
            <img class="avatar" src="/img/school.png">
          </a>
        </div>

        <div class="eight wide column">
          <form class="ui form segment" method="post">
            <div class="field required">
              <label>標題</label>
              <input type="text" name="title">
            </div>
            <div class="field required">
              <label>內容</label>
              <textarea name="content" rows="15"></textarea>
            </div>
            <input type="submit" class="ui button" value="發表">
          </form>
        </div>
      </div>

  </div>
