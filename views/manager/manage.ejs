<%- include('header') %>
    <link href="https://cdn.rawgit.com/TeaMeow/TocasUI/2.3.2/dist/tocas.css" rel='stylesheet'>
    <script src="https://cdn.rawgit.com/TeaMeow/TocasUI/2.3.2/dist/tocas.js">
    </script>

    <style type="text/css">
        .pusher {
            background-color: rgb(250, 250, 250);
        }
    </style>

    <div class="ts modals dimmer">
        <dialog id="modal" class="ts basic modal" open>
            <i class="close icon"></i>
            <div class="ts icon header">
                <i class="ticket icon"></i> 確定要「初始化餐券編號嗎」嗎
            </div>
            <div class="content" style="text-align: center">
                <p>
                    即將初始化餐券編號，請謹慎考慮。
                </p>
            </div>
            <div class="actions">
                <button style="background-color: gray; height: 40px; width: 70px" onclick="ts('#modal').modal('hide')">
                    不
                </button>
                <button style="background-color: red; height: 40px; width: 70px"  onclick="location.href='/manager/initLedger'">
                    是的
                </button>
            </div>
        </dialog>
    </div>

    <!-- 左側邊欄 -->
    <div class="ts left vertical fluid inverted visible menu sidebar">

        <!-- 個人資料項目 -->
        <div class="center aligned item">
            <a href="/manager/manage">
                <img class="ts tiny circular image" src="/img/school.png">
                <br>
                <br>
                <div>School</div>
            </a>
        </div>
        <!-- / 個人資料項目 -->

        <!-- 申請流程 -->
        <div class="item" style="font-size: 20px">
            <i class="users icon"></i>
            申請流程
            <div class="menu">
                <a class="item" href="/manager/verifyApplicationPass">審查申請資格</a>
                <a class="item" href="/manager/querySuccessApplyStatusFalse">審查結果/發放餐券</a>
            </div>
        </div>
        <!-- / 申請流程 -->

        <!-- 網站管理 -->
        <div class="item" style="font-size: 20px">
            <i class="setting icon"></i>
            公告管理
            <div class="menu">
                <a class="item" href="/posts/create">新增貼文</a>
            </div>
        </div>
        <!-- / 網站管理 -->

        <!-- 餐券管理 -->
        <div class="item" style="font-size: 20px">
            <i class="ticket icon"></i>
            餐券管理
            <div class="menu">
                <a class="item" href="/manager/queryUsedTicket">餐券使用狀況</a>
                <button class="item" onclick="ts('#modal').modal('show')">初始化餐券編號 </button>
                <!-- <a class="item" href="/manager/querySomeoneTicket">查詢個人餐券使用狀況</a> -->
            </div>
        </div>
        <!-- / 餐券管理 -->

        <!-- 管理文章 -->
        <!-- <a href="#!" class="item">
            <i class="newspaper icon"></i>
            管理文章
        </a> -->
        <!-- / 管理文章 -->

        <!-- 商家管理 -->
        <div class="item" style="font-size: 20px">
            <i class="flag icon"></i>
            商家管理
            <div class="menu">
                <a class="item" href="/manager/queryStore">商家資料</a>
            </div>
            </a>
        </div>
        <!-- / 商家管理 -->

        <!-- 底部選單 -->
        <div class="bottom menu" style="font-size: 20px">
            <!-- 登出 -->
            <a href="/signout" class="item">
                <i class="sign out icon"></i>
                登出
            </a>
            <!-- / 登出 -->
        </div>
        <!-- / 底部選單 -->
    </div>
    <!-- / 左側邊欄 -->

    <!-- 可擠壓式的推動容器 -->
    <div class="squeezable pusher">
        <%- include('../components/nav') %>
        <%- include('../components/notification') %>
            <!-- 主要容器 -->
            <div class="ts narrow container">
                <div class="ts relaxed grid">
                    <!-- 標題欄位 -->
                    <div class="sixteen wide column">
                        <h3 class="ts header">
                            管理者介面
                        </h3>
                    </div>
                    <!-- / 標題欄位 -->

                    <!-- 大略卡片欄位 -->
                    <div class="sixteen wide column">
                        <div class="ts two cards">
                            <!-- 本學期通過人數 -->
                            <div class="ts card" style="background-color: #3379b788;">
                                <div class="content">
                                    <!-- 統計數據 -->
                                    <div class="ts left aligned statistic">
                                        <div class="value" style="color: white">
                                            <%= stu %>
                                        </div>
                                        <div class="label" style="color: white">本學期通過人數</div>
                                    </div>
                                    <!-- / 統計數據 -->
                                </div>
                                <div class="symbol" style="color: white">
                                    <i class="eye icon"></i>
                                </div>
                                <a href="/manager/querySuccessApplyStatusFalse">
                                    <div class="panel-footer" style="background-color: #eee">
                                        <div style="padding-left:13px;text-align:left;border-right:5px solid #eee;border-left:0">查看詳情
                                            <i class="arrow right"> </i>
                                        </div>

                                    </div>
                                </a>
                            </div>
                            <!-- / 本學期通過人數 -->


                            <!-- 投訴問題 -->
                            <!-- <div class="ts card">
                                <div class="content"> -->
                            <!-- 統計數據 -->
                            <!-- <div class="ts left aligned statistic">
                                        <div class="value">
                                            0
                                        </div>
                                        <div class="label">投訴問題</div>
                                    </div> -->
                            <!-- / 統計數據 -->
                            <!-- </div>
                                <div class="symbol">
                                    <i class="users icon"></i>
                                </div>
                            </div> -->
                            <!-- / 投訴問題 -->

                            <!-- 本學期合作商家 -->
                            <div class="ts card">
                                <div class="content" style="background-color: #5cb85c80">
                                    <!-- 統計數據 -->
                                    <div class="ts left aligned statistic">
                                        <div class="value" style="color: white">
                                            <%= queryStore.length %>
                                        </div>
                                        <div class="label" style="color: white">本學期合作商家</div>
                                    </div>
                                    <!-- / 統計數據 -->
                                </div>
                                <div class="symbol">
                                    <i class="shop icon" style="color: white"></i>
                                </div>
                                <a href="/manager/queryStore">
                                    <div class="panel-footer" style="background-color: #eee">
                                        <div style="padding-left:13px;text-align:left;border-right:5px solid #eee;border-left:0;color:#5cb85c">查看詳情
                                            <i class="arrow right"> </i>
                                        </div>

                                    </div>
                                </a>
                            </div>
                            <!-- / 本學期合作商家 -->

                        </div>

                        <!-- 區隔線 -->
                        <div class="ts section divider"></div>
                        <!-- / 區隔線 -->
                    </div>
                    <!-- / 大略卡片欄位 -->

                    <!-- 左側雜項欄位 -->
                    <div class="ten wide column">
                        <div class="ts top attached info segment">
                            <div class="ts large header">待審學生</div>
                        </div>
                        <div class="ts attached segment">
                            <table class="ts very basic table">
                                <thead>
                                    <tr>
                                        <th>學號</th>
                                        <th>學生姓名</th>
                                        <th>申請日期</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <%stuLists.forEach(function(stuList) { %>
                                        <tr>
                                            <td>
                                                <%=stuList.stuId%>
                                            </td>
                                            <td>
                                                <%=stuList.stuName%>
                                            </td>
                                            <td>
                                                <%=stuList.applyDate%>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- / 左側雜項欄位 -->

                    <!-- 右側雜項欄位 -->
                    <div class="six wide column">
                        <!-- 相關數據 -->
                        <div class="ts top attached info segment">
                            <div class="ts large header">相關數據</div>
                        </div>
                        <div class="ts bottom attached segment">
                            <!-- 申請通過率 -->
                            <!-- <div class="ts header">申請通過率
                                <%= passRateTitle %>
                            </div> -->
                            <!-- 進度列 -->
                            <!-- <div class="ts small active primary progress">
                                <div class="bar" style="width: <%= passRate %>%">
                                    <div class="text">
                                        <%= passRate %>%</div>
                                </div>
                            </div> -->
                            <!-- / 進度列 -->
                            <!-- / 申請通過率 -->
                            <!-- 餐券使用率 -->
                            <div class="ts header">餐券使用率
                                <%= ticketUsageRateTitle %>
                            </div>
                            <!-- 進度列 -->
                            <div class="ts small active primary progress">
                                <div class="bar" style="width: <%= ticketUsageRate %>%">
                                    <div class="text">
                                        <%= ticketUsageRate %>%</div>
                                </div>
                            </div>
                            <!-- / 進度列 -->
                            <!-- / 餐券使用率 -->
                        </div>
                        <!-- / 相關數據 -->

                    </div>
                    <!-- / 右側雜項欄位 -->
                </div>
            </div>
            <!-- / 主要容器 -->
            <br>
    </div>
    <!-- / 可擠壓式的推動容器 -->
    <%- include('footer') %>